
     <% if notice %>
         <p id="notice"><%= notice %></p>
     <% end %>

     <% cache ['store', Hotel.latest] do %>
         <% @hotels.each do |hotel| %>
             <div class="col-lg-3">

             <% cache ['entry', hotel] do %>
                 <%= image_tag hotel.image_url, class: "img-thumbnail",
                               width: "200px", height: "150px" %>
               <h2>  <%= hotel.title %> </h2>
               <p>  <%= sanitize(hotel.description) %> </p>
               <p>  <%= number_to_currency(hotel.price) %> </p>

             <% end %>
             </div>
         <% end %>
     <% end %>
