<p id="notice"><%= notice %></p>

<h1>Listing Hotels</h1>


<table>
  <% @hotels.each do |hotel| %>
      <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
        <td>
          <%= image_tag(hotel.image_url, class: 'list_image') %>
        </td>
        <td class="list_description">
          <dl>
            <dt><%= hotel.title %></dt>
            <dd><%= truncate(strip_tags(hotel.description),
                             length: 80) %></dd>
          </dl>
        </td>
        <td class="list_actions">
          <%= link_to 'Show', hotel %><br/>
          <%= link_to 'Edit', edit_hotel_path(hotel) %><br/>
          <%= link_to 'Destroy', hotel, method: :delete,
                      data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
  <% end %>
</table>
<br />
<%= link_to 'New hotel', new_hotel_path %>